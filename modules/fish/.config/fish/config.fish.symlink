setenv EDITOR vim

setenv PATH /usr/local/heroku/bin $PATH
setenv PATH /usr/local/share/npm/bin $PATH
setenv GOPATH ~/Projects/go
setenv PATH $PATH $GOPATH/bin

if not status --is-interactive
  exit
end

set fish_greeting ''

for file in ~/.config/fish/config/*.fish
  source $file
end

function fish_user_key_bindings --description 'Setup custom key bindings'
  bind \cc 'echo; commandline ""; commandline -f repaint'
end
